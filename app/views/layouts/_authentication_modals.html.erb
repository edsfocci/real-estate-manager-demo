<div class="modal fade" id="auth-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title log-in auth-modal-item">Log in</h4>
        <h4 class="modal-title sign-up auth-modal-item">Sign up</h4>
        <h4 class="modal-title forgot-password auth-modal-item">
          Forgot your password?</h4>
      </div>
      <div class="modal-body">
        <div class="log-in auth-modal-item">
          <form class="new_user" id="log-in" action="/users/sign_in" accept-charset="UTF-8" method="post">
            <div class="field">
              <label for="user_email">Email</label><br />
              <input autofocus="autofocus" type="email" value="" name="user[email]" id="user_email_login" />
            </div>

            <div class="field">
              <label for="user_password">Password</label><br />
              <input autocomplete="off" type="password" name="user[password]" id="user_password_login" />
            </div>

            <div class="field">
              <input name="user[remember_me]" type="hidden" value="0" /><input type="checkbox" value="1" name="user[remember_me]" id="user_remember_me_login" />
              <label for="user_remember_me">Remember me</label>
            </div>

            <div class="actions">
              <input type="submit" name="commit" value="Log in" data-disable-with="Log in" />
            </div>
          </form>

          <a class="signup-btn-modal" href="#">Sign up</a><br />

          <a class="forgot-password-btn-modal" href="#">
            Forgot your password?</a><br />
        </div>


        <div class="sign-up auth-modal-item">
          <form class="new_user" id="sign-up" action="/users" accept-charset="UTF-8" method="post">
            <div class="field">
              <label for="user_email">Email</label><br />
              <input autofocus="autofocus" type="email" value="" name="user[email]" id="user_email_signup" />
            </div>

            <div class="field">
              <label for="user_password">Password</label>
              <em>(6 characters minimum)</em>
              <br />
              <input autocomplete="off" type="password" name="user[password]" id="user_password_signup" />
            </div>

            <div class="field">
              <label for="user_password_confirmation">Password confirmation</label><br />
              <input autocomplete="off" type="password" name="user[password_confirmation]" id="user_password_confirmation_signup" />
            </div>

            <div class="form-group">
              <label for="plan_number">Subscription Plan</label>
              <select class="plan_number" name="subscription[plan_number]">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
              </select>
            </div>

            <div class="actions">
              <input type="submit" name="commit" value="Sign up" data-disable-with="Sign up" />
            </div>
          </form>

          <a class="login-btn-modal" href="#">Log in</a>
          <br />
        </div>


        <div class="forgot-password auth-modal-item">
          <form class="new_user" id="forgot-password" action="/users/passwordn" accept-charset="UTF-8" method="post">
            <div class="field">
              <label for="user_email">Email</label><br />
              <input autofocus="autofocus" type="email" value="" name="user[email]" id="user_email_forgot_pw" />
            </div>

            <div class="actions">
              <input type="submit" name="commit" value="Send me reset password instructions" data-disable-with="Send me reset password instructions" />
            </div>
          </form>

          <a class="login-btn-modal" href="#">Log in</a><br />

          <a class="signup-btn-modal" href="#">Sign up</a><br />
        </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
